{
  "manifest_version": 2,

  "name": "TrueFull for CodePen",
  "description": "Use CodePen's Full Page View without any distractions or headers.",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "38": "icons/shown-38.png"
    }
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["http://codepen.io/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "webNavigation",
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "icons": {
    "128": "icons/shown-128.png",
    "64": "icons/shown-64.png"
  }
}
